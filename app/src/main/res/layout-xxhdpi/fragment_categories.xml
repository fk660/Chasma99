<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".categories.CategoriesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/black"
            android:padding="20dp">

            <ImageView
                android:id="@+id/menuuu_bar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/menup" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="49dp"
                android:layout_marginTop="4dp"
                android:text="CATEGORIES"
                android:fontFamily="@font/alatsi"
                android:textColor="@color/orangee"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/cart" />
        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/computerFragmentt"
                android:layout_width="wrap_content"
                android:layout_height="138dp"
                android:src="@drawable/computerrglasses" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:src="@drawable/eyeglasseseg" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:src="@drawable/sportsglasses" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:src="@drawable/safetyglasses" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:src="@drawable/powersunclassesps" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:src="@drawable/sunglassessg" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:src="@drawable/progressivglasses" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:src="@drawable/contacttlenses" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>