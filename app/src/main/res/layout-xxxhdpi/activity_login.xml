<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="438dp"
        android:layout_height="267dp"
        android:background="@color/black"
        android:scaleType="centerCrop"
        android:src="@drawable/blllkk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".27"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="241dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logotoop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="209dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="108dp"
        android:text="chashma99.com"
        android:textAllCaps="true"
        android:textColor="@color/orangee"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpagy"
        android:layout_width="380dp"
        android:layout_height="567dp"
        android:background="@drawable/view_roundd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.842" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabyy"
        android:layout_width="435dp"
        android:layout_height="91dp"
        android:layout_marginTop="88dp"
        android:layout_marginBottom="467dp"
        android:background="@drawable/view_roundd"
        app:layout_constraintBottom_toBottomOf="@+id/viewpagy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.231"
        app:tabIndicatorColor="@color/orangee" />


</androidx.constraintlayout.widget.ConstraintLayout>

